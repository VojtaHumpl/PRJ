<Window x:Class="DataVisualizer.Dialogs.DataVisualizationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataVisualizer.Dialogs"
        mc:Ignorable="d"
        Title="Select Data to Display" Height="300" Width="400" ResizeMode="NoResize" ShowInTaskbar="False" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner" Topmost="True">
	<Grid>
		<Label x:Name="labelDataset" Content="Dataset" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="31,26,0,0"/>
		<ComboBox x:Name="comboBoxDataset" HorizontalAlignment="Left" Margin="38,57,0,0" VerticalAlignment="Top" Width="236"/>
		<TextBox x:Name="textBoxFunction" Margin="38,128,38,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="66"/>
		<Label x:Name="labelExpression" Content="Expression" HorizontalAlignment="Left" Margin="31,97,0,0" VerticalAlignment="Top"/>
		<Button x:Name="buttonOK" Content="OK" HorizontalAlignment="Left" Margin="38,230,0,0" VerticalAlignment="Top" Width="100" Click="buttonOK_Click"/>
		<Button x:Name="buttonCancel" Content="Cancel" HorizontalAlignment="Right" Margin="0,230,38,0" VerticalAlignment="Top" Width="100" Click="buttonCancel_Click"/>

	</Grid>
</Window>
